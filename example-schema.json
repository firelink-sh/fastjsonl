{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Person",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "age": {
      "type": "integer",
      "minimum": 0
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "tags": {
      "type": "array",
      "prefixItems": [
        { "type": "string" },
        { "type": "integer" }
      ],
      "items": false
    }
  },
  "required": ["name", "age"],
  "additionalProperties": false
}
